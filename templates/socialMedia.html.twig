
{% macro twitter_head(config) %}

    <!-- Twitter card integration -->
    <meta name="twitter:card" content="summary">
    <meta name="twitter:site" content="@{{ config.app_name}}">
    <meta name="twitter:title" content="{{config.app_title }}">
    <meta name="twitter:description" content="{{ config.app_description }}">
    <meta name="twitter:domain" content="{{ config.app_domain }}">
{% endmacro %}

{% macro facebook_head(config) %}

    <meta property="og:title" content="{{config.app_title }}" />
    <meta property="og:url" content="{{ config.full_url}}" />
    <meta property="og:image" content="{{config.app_logo }}">
    <meta property="og:description" content="{{config.app_description }}" />
    <meta property="og:type" content="website" />
{% endmacro %}
